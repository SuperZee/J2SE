package com.lee.spi_08.josephus;

/**
 * 
 * @author SpiColorPendra
 * @version 1.0
 */
/*
 * 一群人围成一个圈，从第一个开始编号1,2,3...n 从第一个人开始数m个号，数到m的时候这个人出列 出列后从这个人后面开始
 * 从1开始再数到m,直到最后一个人出列 求出列的编号系列
 * 
 */
public class Demo {
	public static void main(String[] args) {

	}
}

class Josephus {
	// 编号
	int no;
	Josephus nextJosephus = null;

	public Josephus() {
	}

	// 给这个人编号
	public Josephus(int no) {
		this.no = no;
	}
}

// 环形链表
class CycLink {
	// 第一个小孩的引用
	Josephus firstJosephus = null;
	// 设置一个临时
	Josephus temp = null;
	int len = 0;// 代表一共有多少人
	// 设置链表大小

	public void setLen(int len) {
		this.len = len;
	}

	// 初始化环形链表
	public void createLink() {
		for (int i = 1; i <= len; i++) {
			// 创建第一个人
			if (i == 1) {
				Josephus j1 = new Josephus(i);
				this.firstJosephus = j1;
				this.temp = j1;
			}else{
				Josephus j1 = new Josephus(i);
				temp.nextJosephus = j1;
				temp = j1;
			}
		}
	}
}
