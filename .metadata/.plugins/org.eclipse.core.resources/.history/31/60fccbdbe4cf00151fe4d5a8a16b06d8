package com.lee.spi_13.swing;

import javax.swing.JButton;
import javax.swing.JFrame;

/**
 * 流式布局
 * 
 * @author SpiColorPendra
 *
 */
public class Demo3 extends JFrame {
	JButton jb1, jb2, jb3, jb4 = null;

	public static void main(String[] args) {

	}

	public Demo3() {
		jb1 = new JButton("张飞");
		jb2 = new JButton("关于");
		jb3 = new JButton("赵云");
		jb4 = new JButton("马超");
		// 添加组件
		this.add(jb1);
	}
}
