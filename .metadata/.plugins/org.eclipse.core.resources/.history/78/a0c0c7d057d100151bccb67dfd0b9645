package com.lee.spi_16.airplanegame;

import java.awt.Canvas;
import java.awt.Color;
import java.awt.Graphics;

import javax.swing.JPanel;

public class MainPanel extends JPanel {
	MasterPlant masterP;

	public MainPanel() {
		// 设置主角飞机初始位置 长宽
		masterP = new MasterPlant(135, 400);
	}

	// 重写父类paint函数
	@Override
	public void paint(Graphics g) {
		super.paint(g);

		// 设置机体颜色 画一个实心矩形(机干部分)
		g.setColor(Color.CYAN);
		g.fillRect(masterP.pointX, masterP.pointY,15,50);
		// 画机体的三角形
		g.drawfillLine(masterP.pointX + 25, masterP.pointY + 25, masterP.pointX + 55, masterP.pointY + 50);
		
		
	}
}
